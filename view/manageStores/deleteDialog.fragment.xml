<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog showHeader="false" afterClose="storesDeleteDialog.cancel" initialFocus="buttonCancel">
        <subHeader>
            <Toolbar>
                <ToolbarSpacer/>
                <core:Icon src="sap-icon://warning2" color="red"/>
                <Label text='Удалить "{/name}"?'/>
                <ToolbarSpacer/>
            </Toolbar>
        </subHeader>
        <Text text='Также будут удалены все покупки, связанные с этим магазином'/>
        <beginButton>
            <Button text="Удалить" type="Reject" press="storesDeleteDialog.apply"/>
        </beginButton>
        <endButton>
            <Button id="buttonCancel" text="Отмена" press="storesDeleteDialog.cancel"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
