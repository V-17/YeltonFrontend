<mvc:View
    controllerName="yelton.controller.manageStores.C"
    xmlns:l="sap.ui.layout"
    xmlns:model="sap.ui.model"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page>
        <headerContent>
            <ToolbarSpacer/>
            <SearchField liveChange="onFilterLiveSearch" width="30%" showSearchButton="false"/>
        </headerContent>
        <content>
            <List
                id="listStores"
                mode="SingleSelectMaster"
                items="{
                    path : '/',
                    sorter : {
                        path : 'enabled',
                        descending: true
                    }
                }"
                growing="true"
                growingThreshold="50"
                growingScrollToLoad="true"
                itemPress="storesEditDialog.showEditDialog">
                <items>
                    <StandardListItem type="Active" title="{name}" info="{= ${enabled} ? '' : 'Архивный'}" infoState="Warning"/>
                </items>
            </List>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button icon="sap-icon://add" text="Создать" press="storesEditDialog.showCreateDialog" tooltip="Создать новый магазин"/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
