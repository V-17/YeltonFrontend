<mvc:View
    controllerName="yelton.controller.manageStores.C"
    xmlns:l="sap.ui.layout"
    xmlns:model="sap.ui.model"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page>
        <headerContent>
            <ToolbarSpacer/>
            <SearchField liveChange="onFilterLiveSearch" width="30%" showSearchButton="false"/>
        </headerContent>
        <content>
            <List
                id="listStores"
                mode="SingleSelectMaster"
                items="{
                    path : 'stores>/',
                    sorter : {
                        path : 'enabled',
                        descending: true
                    }
                }"
                growing="true"
                growingThreshold="50"
                growingScrollToLoad="true"
                itemPress=".editDialog.showEditDialog">
                <items>
                    <StandardListItem
                        type="Active"
                        title="{stores>name}"
                        info="{= ${stores>enabled} ? '' : '{i18n>archived}'}"
                        infoState="Warning"/>
                </items>
            </List>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button
                    icon="sap-icon://add"
                    text="{i18n>create}"
                    press=".editDialog.showCreateDialog"
                    tooltip="{i18n>createNewStore}"/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
