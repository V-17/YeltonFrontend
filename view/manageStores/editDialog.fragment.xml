<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        title="Магазин"
        afterClose="_onEditDialogCancel">
        <content>
                <Input
                    id="inputName"
                    value="{/name}"
                    placeholder="Введите название"
                    submit="_onEditDialogOK"
                    maxLength="50"/>
        </content>
        <beginButton>
            <Button text="Сохранить" type="Accept" press="_onEditDialogOK"/>
        </beginButton>
        <endButton>
            <Button text="Отмена" press="_onEditDialogCancel"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
