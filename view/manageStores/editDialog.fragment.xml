<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="Магазин" afterClose="storesEditDialog.close">
        <content>
            <Label text="Название" labelFor="inputBarcode"/>
            <Input
                id="inputName"
                value="{/name}"
                placeholder="Введите название магазина"
                valueStateText="Укажите название магазина"
                liveChange="_onInputNameLiveChange"
                maxLength="50"/>

            <Label text="Адрес" labelFor="inputAddress" class="sapUiSmallMarginTop"/>
            <Input id="inputAddress" value="{/address}" placeholder="Введите адрес магазина" maxLength="255"/>

            <HBox alignItems="Center" class="sapUiSmallMarginTop">
                <Label text="Статус" tooltip="Архивный магазин будет скрыт при добавлении новой покупки"/>
                <Switch
                    id="switchStatus"
                    state="{/enabled}"
                    tooltip="Архивный магазин будет скрыт при добавлении новой покупки"
                    class="sapUiTinyMarginBegin"/>
            </HBox>
        </content>
        <buttons>
            <Button id="buttonDelete" tooltip="Удалить" icon="sap-icon://delete" visible="false" press="storesDeleteDialog.show"/>
            <Button id="buttonEdit" tooltip="Изменить" icon="sap-icon://edit" press="storesEditDialog.edit"/>
            <Button id="buttonSave" text="Сохранить" type="Accept" press="storesEditDialog.save"/>
            <Button text="Закрыть" press="storesEditDialog.close"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
