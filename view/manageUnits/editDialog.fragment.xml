<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="{i18n>unit}" afterClose=".editDialog.close">
        <content>
            <VBox>
                <Label text="{i18n>fullName}" labelFor="inputFullName"/>
                <Input
                    id="inputFullName"
                    value="{/fullName}"
                    placeholder="{i18n>fullName}"
                    valueStateText="{i18n>enterFullName}"
                    liveChange="_onInputFullNameLiveChange"
                    maxLength="50"/>

                <Label text="{i18n>shortName}" labelFor="inputShortName" class="sapUiSmallMarginTop"/>
                <Input
                    id="inputShortName"
                    value="{/shortName}"
                    placeholder="{i18n>shortName}"
                    valueStateText="{i18n>enterShortName}"
                    liveChange="_onInputShortNameLiveChange"
                    maxLength="5"/>
            </VBox>
        </content>
        <buttons>
            <Button id="buttonDelete" tooltip="{i18n>delete}" icon="sap-icon://delete" visible="false" press=".deleteDialog.show"/>
            <Button id="buttonEdit" tooltip="{i18n>edit}" icon="sap-icon://edit" press=".editDialog.edit"/>
            <Button id="buttonSave" text="{i18n>save}" type="Accept" press=".editDialog.save"/>
            <Button text="{i18n>close}" press=".editDialog.close"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
