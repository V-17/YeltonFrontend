<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        title="Мера"
        afterClose="_onEditDialogCancel">
        <content>
            <VBox>
                <Input
                    id="inputFullName"
                    value="{/fullName}"
                    placeholder="Полное название"
                    submit="_onEditDialogOK"
                    maxLength="50"/>
                    <Input
                        id="inputShortName"
                        value="{/shortName}"
                        placeholder="Краткое название"
                        submit="_onEditDialogOK"
                        maxLength="5"/>
                </VBox>
        </content>
        <beginButton>
            <Button text="Сохранить" type="Accept" press="_onEditDialogOK"/>
        </beginButton>
        <endButton>
            <Button text="Отмена" press="_onEditDialogCancel"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
