<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="Мера" afterClose="unitsEditDialog.close">
        <content>
            <VBox>
                <Label text="Полное название" labelFor="inputFullName"/>
                <Input
                    id="inputFullName"
                    value="{/fullName}"
                    placeholder="Полное название"
                    valueStateText="Укажите полное название"
                    liveChange="_onInputFullNameLiveChange"
                    maxLength="50"/>

                <Label text="Краткое название" labelFor="inputShortName" class="sapUiSmallMarginTop"/>
                <Input
                    id="inputShortName"
                    value="{/shortName}"
                    placeholder="Краткое название"
                    valueStateText="Укажите краткое название"
                    liveChange="_onInputShortNameLiveChange"
                    maxLength="5"/>
            </VBox>
        </content>
        <buttons>
            <Button id="buttonDelete" tooltip="Удалить" icon="sap-icon://delete" visible="false" press="unitsDeleteDialog.show"/>
            <Button id="buttonEdit" tooltip="Изменить" icon="sap-icon://edit" press="unitsEditDialog.edit"/>
            <Button id="buttonSave" text="Сохранить" type="Accept" press="unitsEditDialog.save"/>
            <Button text="Закрыть" press="unitsEditDialog.close"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
