<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog afterClose="unitsDeleteDialog.cancel" initialFocus="buttonCancel" showHeader="false">
        <subHeader>
            <Toolbar>
                <ToolbarSpacer/>
                <core:Icon src="sap-icon://warning2" color="red"/>
                <Label text='{i18n>delete} "{/fullName}"?'/>
                <ToolbarSpacer/>
            </Toolbar>
        </subHeader>
        <Text text="{i18n>deleteUnitWaning}"/>
        <beginButton>
            <Button text="{i18n>delete}" type="Reject" press="unitsDeleteDialog.apply"/>
        </beginButton>
        <endButton>
            <Button id="buttonCancel" text="{i18n>cancel}" press="unitsDeleteDialog.cancel"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
