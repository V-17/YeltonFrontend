<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog afterClose="unitsDeleteDialog.cancel" initialFocus="buttonCancel" showHeader="false">
        <subHeader>
            <Toolbar>
                <ToolbarSpacer/>
                <core:Icon src="sap-icon://warning2" color="red"/>
                <Label text='Удалить "{/fullName}"?'/>
                <ToolbarSpacer/>
            </Toolbar>
        </subHeader>
        <Text text='Также будут удалены все товары и покупки, связанные с этой мерой'/>
        <beginButton>
            <Button text="Удалить" type="Reject" press="unitsDeleteDialog.apply"/>
        </beginButton>
        <endButton>
            <Button id="buttonCancel" text="Отмена" press="unitsDeleteDialog.cancel"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
