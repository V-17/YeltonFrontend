<mvc:View
    controllerName="controller.manageUnits.C"
    xmlns:l="sap.ui.layout"
    xmlns:model="sap.ui.model"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page showHeader="false">
        <subHeader>
            <Toolbar>
                <ToolbarSpacer/>
                <SearchField liveChange="onFilterLiveSearch" width="30%" showSearchButton="false"/>
            </Toolbar>
        </subHeader>
        <content>
            <List id="listUnits" mode="SingleSelectMaster" items="{/}" growing="true">
                <items>
                    <StandardListItem type="Active" title="{fullName}"/>
                </items>
            </List>
        </content>
        <footer>
            <Toolbar>
                <Button icon="sap-icon://add" press="onCreateButtonPress" tooltip="Создать"/>
                <Button icon="sap-icon://edit" press="onEditButtonPress" tooltip="Изменить"/>
                <Button icon="sap-icon://delete" press="onDeleteButtonPress" tooltip="Удалить"/>
                <ToolbarSpacer/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
