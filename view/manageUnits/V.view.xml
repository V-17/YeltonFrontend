<mvc:View
    controllerName="yelton.controller.manageUnits.C"
    xmlns:l="sap.ui.layout"
    xmlns:model="sap.ui.model"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page>
        <headerContent>
            <ToolbarSpacer/>
            <SearchField liveChange="onFilterLiveSearch" width="30%" showSearchButton="false"/>
        </headerContent>
        <content>
            <List
                id="listUnits"
                mode="SingleSelectMaster"
                items="{/}"
                growing="true"
                growingThreshold="50"
                growingScrollToLoad="true"
                itemPress="onSelect">
                <items>
                    <StandardListItem type="Active" title="{fullName}"/>
                </items>
            </List>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button icon="sap-icon://add" text="Создать" press="onCreateButtonPress" tooltip="Создать новую единицу измерения"/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
