<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="{i18n>category}" afterClose=".editDialog.close">
        <content>

            <Input
                id="inputName"
                value="{/name}"
                placeholder="{i18n>enterCategoryName}"
                valueStateText="{i18n>enterCategoryName}"
                submit=".editDialog.save"
                liveChange="_onInputNameLiveChange"
                maxLength="50"/>
        </content>
        <buttons>
            <Button
                id="buttonDelete"
                tooltip="{i18n>delete}"
                icon="sap-icon://delete"
                visible="false"
                press=".deleteDialog.show"/>
            <Button id="buttonEdit" tooltip="{i18n>edit}" icon="sap-icon://edit" press=".editDialog.edit"/>
            <Button id="buttonSave" text="{i18n>save}" type="Accept" press=".editDialog.save"/>
            <Button text="{i18n>close}" press=".editDialog.close"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
