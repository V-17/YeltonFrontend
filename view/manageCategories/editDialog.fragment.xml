<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        title="Категория"
        afterClose="categoriesEditDialog.close">
        <content>
                <Input
                    id="inputName"
                    value="{/name}"
                    placeholder="Введите название"
                    valueStateText="Укажите название категории"
                    submit="categoriesEditDialog.save"
                    liveChange="_onInputNameLiveChange"
                    maxLength="50"/>
        </content>
        <buttons>
            <Button id="buttonDelete" tooltip="Удалить" icon="sap-icon://delete" visible="false" press="categoriesDeleteDialog.show"/>
            <Button id="buttonEdit" tooltip="Изменить" icon="sap-icon://edit" press="categoriesEditDialog.edit"/>
            <Button id="buttonSave" text="Сохранить" type="Accept" press="categoriesEditDialog.save"/>
            <Button text="Закрыть" press="categoriesEditDialog.close"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
