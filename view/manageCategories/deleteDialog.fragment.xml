<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog showHeader="false" afterClose="categoriesDeleteDialog.cancel" initialFocus="buttonCancel">
        <subHeader>
            <Toolbar>
                <ToolbarSpacer/>
                <core:Icon src="sap-icon://warning2" color="red"/>
                <Label text='Удалить "{/name}"?'/>
                <ToolbarSpacer/>
            </Toolbar>
        </subHeader>
        <Text text='Также будут удалены все товары и покупки, связанные с этой категорией'/>
        <beginButton>
            <Button text="Удалить" type="Reject" press="categoriesDeleteDialog.apply"/>
        </beginButton>
        <endButton>
            <Button id="buttonCancel" text="Отмена" press="categoriesDeleteDialog.cancel"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
