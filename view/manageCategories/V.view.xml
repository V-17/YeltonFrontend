<mvc:View
    controllerName="controller.manageCategories.C"
    xmlns:l="sap.ui.layout"
    xmlns:model="sap.ui.model"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page showHeader="false">
        <subHeader>
            <Toolbar>
                <ToolbarSpacer/>
                <SearchField liveChange="onFilterLiveSearch" width="30%" showSearchButton="false"/>
            </Toolbar>
        </subHeader>
        <List
            id="listCategories"
            mode="SingleSelectMaster"
            items="{/}"
            growing="true"
            growingThreshold="50"
            growingScrollToLoad="true">
            <items>
                <StandardListItem type="Active" title="{name}"/>
            </items>
        </List>
        <footer>
            <Toolbar>
                <Button icon="sap-icon://add" press="onCreateButtonPress" tooltip="Создать"/>
                <Button icon="sap-icon://edit" press="onEditButtonPress" tooltip="Изменить"/>
                <Button icon="sap-icon://delete" press="onDeleteButtonPress" tooltip="Удалить"/>
                <ToolbarSpacer/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
