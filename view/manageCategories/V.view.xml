<mvc:View
    controllerName="controller.manageCategories"
    xmlns:l="sap.ui.layout"
    xmlns:model="sap.ui.model"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page showHeader="false">
        <subHeader>
            <Toolbar>
                <ToolbarSpacer/>
                <Button
                    id="buttonSettings"
                    icon="sap-icon://settings"
                    text="{user>/login}"
                    tooltip="Меню"
                    press="onSettingsButtonPress"/>
            </Toolbar>
        </subHeader>
        <List id="tableCategories" mode="SingleSelectMaster" items="{/}" growing="true">
            <headerToolbar>
                <Toolbar>
                    <Button icon="sap-icon://add" press="onCreateButtonPress" tooltip="Создать"/>
                    <Button icon="sap-icon://edit" press="onEditButtonPress" tooltip="Изменить"/>
                    <Button icon="sap-icon://delete" press="onDeleteButtonPress" tooltip="Удалить"/>
                    <ToolbarSpacer/>
                </Toolbar>
            </headerToolbar>
            <items>
                <StandardListItem type="Active" title="{name}"/>
            </items>
        </List>
    </Page>
</mvc:View>
