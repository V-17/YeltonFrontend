<mvc:View
    controllerName="yelton.controller.manageCategories.C"
    xmlns:l="sap.ui.layout"
    xmlns:model="sap.ui.model"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page>
        <headerContent>
            <ToolbarSpacer/>
            <SearchField liveChange="onFilterLiveSearch" width="30%" showSearchButton="false"/>
        </headerContent>
        <content>
            <List
                id="listCategories"
                mode="SingleSelectMaster"
                items="{/}"
                growing="true"
                growingThreshold="50"
                growingScrollToLoad="true"
                itemPress="categoriesEditDialog.showEditDialog">
                <items>
                    <StandardListItem type="Active" title="{name}"/>
                </items>
            </List>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button
                    icon="sap-icon://add"
                    text="Создать"
                    press="categoriesEditDialog.showCreateDialog"
                    tooltip="Создать новую категорию"/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
