<mvc:View
    controllerName="yelton.controller.reports.reports"
    xmlns:l="sap.ui.layout"
    xmlns:model="sap.ui.model"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page showHeader="false" enableScrolling="false">
        <subHeader>
            <Toolbar/>
        </subHeader>
        <TileContainer id="reportsContainer">
            <tiles>
                <StandardTile icon="sap-icon://cart-2" title="{i18n>findBestPriceForProduct}" press="onTileBestPriceClick"/>
                <StandardTile icon="sap-icon://line-chart-time-axis" title="{i18n>dynamicsChart}" press="onTileProductLineChartClick"/>
            </tiles>
        </TileContainer>
    </Page>
</mvc:View>
