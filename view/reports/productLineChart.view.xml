<mvc:View
    controllerName="yelton.controller.reports.productLineChart"
    xmlns:l="sap.ui.layout"
    xmlns:chart="yelton.control.Chart"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m">
    <Page showHeader="false" enableScrolling="false">
        <subHeader>
            <Toolbar>
                <Button icon="sap-icon://nav-back" press="onNavBackPress"/>
                <ToolbarSpacer/>
            </Toolbar>
        </subHeader>
        <SearchField
            id="searchField"
            placeholder="{i18n>selectProduct}"
            enableSuggestions="true"
            suggest="onSuggest"
            search="onSearch"
            class="sapUiSmallMarginBottom"
            suggestionItems="{
                path: 'products>/',
                sorter: {
                    path: 'name'
                }
            }">
            <suggestionItems>
                <SuggestionItem key="{products>id}:{products>clientID}" text="{products>name}" description="{products>categoryName}"/>
            </suggestionItems>
        </SearchField>

        <chart:Line id="chart" visible="false" />

    </Page>
</mvc:View>
