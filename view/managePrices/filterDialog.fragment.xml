<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="{i18n>filter}" afterClose=".filterDialog.close" initialFocus="buttonOK">
        <content>
            <VBox>
                <Label text="{i18n>product}"/>
                <SearchField
                    id="searchFieldProduct"
                    enableSuggestions="true"
                    showSearchButton="false"
                    suggest=".filterDialog.onProductSuggest"
                    search=".filterDialog.onProductSearch"
                    suggestionItems="{
                        path: 'products>/',
                        sorter: {
                            path: 'name'
                        }
                    }">
                    <suggestionItems>
                        <SuggestionItem key="{products>id}:{products>clientID}" text="{products>name}" description="{products>categoryName}"/>
                    </suggestionItems>
                </SearchField>
                <Text/>
                <Label text="{i18n>category}"/>
                <SearchField
                    id="searchFieldCategory"
                    enableSuggestions="true"
                    showSearchButton="false"
                    suggest=".filterDialog.onCategorySuggest"
                    search=".filterDialog.onCategorySearch"
                    suggestionItems="{
                        path: 'categories>/',
                        sorter: {
                            path: 'name'
                        }
                    }">
                    <suggestionItems>
                        <SuggestionItem key="{categories>id}:{categories>clientID}" text="{categories>name}"/>
                    </suggestionItems>
                </SearchField>
                <Text/>
                <Label text="{i18n>store}"/>
                <SearchField
                    id="searchFieldStore"
                    enableSuggestions="true"
                    showSearchButton="false"
                    suggest=".filterDialog.onStoreSuggest"
                    search=".filterDialog.onStoreSearch"
                    suggestionItems="{
                        path: 'stores>/',
                        sorter: {
                            path: 'name'
                        }
                    }">
                    <suggestionItems>
                        <SuggestionItem key="{stores>id}:{stores>clientID}" text="{stores>name}"/>
                    </suggestionItems>
                </SearchField>
            </VBox>
        </content>
        <beginButton>
            <Button id="buttonOK" text="{i18n>apply}" type="Accept" press=".filterDialog.apply"/>
        </beginButton>
        <endButton>
            <Button text="{i18n>close}" press=".filterDialog.close"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
