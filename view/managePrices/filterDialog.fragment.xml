<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="Фильтр" afterClose="pricesFilterDialog.close" initialFocus="buttonOK">
        <content>
            <VBox>
                <Label text="Товар"/>
                <SearchField
                    id="searchFieldProduct"
                    enableSuggestions="true"
                    showSearchButton="false"
                    suggest="pricesFilterDialog.onProductSuggest"
                    search="pricesFilterDialog.onProductSearch"
                    suggestionItems="{
                        path: 'products>/',
                        sorter: {
                            path: 'name'
                        }
                    }">
                    <suggestionItems>
                        <SuggestionItem key="{products>id}:{products>clientID}" text="{products>name}" description="{products>categoryName}"/>
                    </suggestionItems>
                </SearchField>
                <Text/>
                <Label text="Категория"/>
                <SearchField
                    id="searchFieldCategory"
                    enableSuggestions="true"
                    showSearchButton="false"
                    suggest="pricesFilterDialog.onCategorySuggest"
                    search="pricesFilterDialog.onCategorySearch"
                    suggestionItems="{
                        path: 'categories>/',
                        sorter: {
                            path: 'name'
                        }
                    }">
                    <suggestionItems>
                        <SuggestionItem key="{categories>id}:{categories>clientID}" text="{categories>name}"/>
                    </suggestionItems>
                </SearchField>
                <Text/>
                <Label text="Магазин"/>
                <SearchField
                    id="searchFieldStore"
                    enableSuggestions="true"
                    showSearchButton="false"
                    suggest="pricesFilterDialog.onStoreSuggest"
                    search="pricesFilterDialog.onStoreSearch"
                    suggestionItems="{
                        path: 'stores>/',
                        sorter: {
                            path: 'name'
                        }
                    }">
                    <suggestionItems>
                        <SuggestionItem key="{stores>id}:{stores>clientID}" text="{stores>name}"/>
                    </suggestionItems>
                </SearchField>
            </VBox>
        </content>
        <beginButton>
            <Button id="buttonOK" text="Применить" type="Accept" press="pricesFilterDialog.apply"/>
        </beginButton>
        <endButton>
            <Button text="Закрыть" press="pricesFilterDialog.close"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
