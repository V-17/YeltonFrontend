<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="Покупка" afterClose="_onEditDialogCancel">
        <content>
            <VBox>
                <Label text="Товар"/>
                <Select id="selectProduct" items="{products>/}" width="100%" tooltip="Товар">
                    <core:Item key="{products>id}:{products>clientID}" text="{products>categoryName} / {products>name}"/>
                </Select>
                <Text/>
                <Label text="Магазин"/>
                <Select id="selectStore" items="{stores>/}" width="100%" tooltip="Товар">
                    <core:Item key="{stores>id}:{stores>clientID}" text="{stores>name}" enabled="{stores>enabled}"/>
                </Select>
                <Text/>
                <DatePicker id="datePicker" placeholder="Дата" displayFormat="long" valueFormat="dd.MM.yyyy"/>
                <Text/>
                <Input id="inputPrice" placeholder="Стоимость" value="{/price}" liveChange="_onInputPriceLiveChange"/>
                <Text id="textPriceCalculation"/>
                <Input id="inputAmount" placeholder="Количество" value="{/amount}" liveChange="_onInputAmountLiveChange"/>
                <Text id="textAmountCalculation"/>
            </VBox>
        </content>
        <beginButton>
            <Button text="Сохранить" type="Accept" press="_onEditDialogOK"/>
        </beginButton>
        <endButton>
            <Button text="Отмена" press="_onEditDialogCancel"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
