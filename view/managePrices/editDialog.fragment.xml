<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="Покупка" afterClose="pricesEditDialog.close">
        <content>
            <VBox>
                <Label text="Товар"/>
                <ComboBox
                    id="comboBoxProduct"
                    width="100%"
                    tooltip="Товар"
                    showSecondaryValues="true"
                    valueStateText="Выберите товар из списка"
                    change="pricesEditDialog.onProductChange"
                    items="{
					  path: 'products>/',
                      sorter: {path: 'products>categoryName'}
                    }">
                    <core:ListItem key="{products>id}:{products>clientID}" text="{products>name}" additionalText="{products>categoryName}"/>
                </ComboBox>

                <Label text="Магазин" class="sapUiSmallMarginTop"/>
                <Select id="selectStore" items="{stores>/}" width="100%" tooltip="Товар">
                    <core:Item key="{stores>id}:{stores>clientID}" text="{stores>name}" enabled="{stores>enabled}"/>
                </Select>

                <Label text="Дата" laberlFor="datePicker" class="sapUiSmallMarginTop"/>
                <DatePicker id="datePicker" placeholder="Выберите дату" displayFormat="long" valueFormat="dd.MM.yyyy"/>

                <Label text="Стоимость" labelFor="inputPrice" class="sapUiSmallMarginTop"/>
                <Input
                    id="inputPrice"
                    placeholder="Стоимость покупки"
                    value="{/price}"
                    liveChange="pricesEditDialog.onInputPriceLiveChange"/>
                <Text id="textPriceCalculation"/>

                <Label text="Количество" labelFor="inputAmount" class="sapUiTinyMarginTop"/>
                <Input
                    id="inputAmount"
                    placeholder="Количество купленного товара"
                    value="{/amount}"
                    liveChange="pricesEditDialog.onInputAmountLiveChange"/>
                <Text id="textAmountCalculation"/>
            </VBox>
        </content>
        <buttons>
            <Button id="buttonDelete" tooltip="Удалить" icon="sap-icon://delete" visible="false" press="pricesDeleteDialog.show"/>
            <Button id="buttonEdit" tooltip="Изменить" icon="sap-icon://edit" press="pricesEditDialog.edit"/>
            <Button id="buttonSave" text="Сохранить" type="Accept" press="pricesEditDialog.save"/>
            <Button text="Закрыть" press="pricesEditDialog.close"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
