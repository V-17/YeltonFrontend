<mvc:View
    controllerName="controller.managePrices"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page>
        <headerContent>
            <Toolbar>
                <Button icon="sap-icon://add" press="onCreateButtonPress" tooltip="Создать"/>
                <Button icon="sap-icon://edit" press="onEditButtonPress" tooltip="Изменить"/>
                <Button icon="sap-icon://delete" press="onDeleteButtonPress" tooltip="Удалить"/>
                <ToolbarSpacer/>
                <!-- <SearchField width="30%" liveChange="onFilterLiveSearch"/> -->
                <Button id="buttonLogout" icon="sap-icon://log" tooltip="Выход" type="Reject" press="onLogoutButtonPress"/>
            </Toolbar>
        </headerContent>
        <Table id="tablePrices" mode="SingleSelectMaster" items="{/}" fixedLayout="false">
            <columns>
                <Column/>
                <Column/>
                <Column/>
            </columns>
            <items>
                <ColumnListItem type="Active">
                    <cells>
                        <ObjectIdentifier title="{productName}" text="{categoryName}"/>
                        <ObjectIdentifier title="{price} {currencyShortName}" text="{amount} {unitShortName}"/>
                        <ObjectIdentifier
                            title="{storeName}"
                            text="{
                                path: 'date',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: {
                                    style: 'long',
                                    source: {
                                        pattern: 'dd.MM.yyyy'
                                    }
                                }
                            }"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Label text="WEB-ИНТЕРФЕЙС НАХОДИТСЯ В СТАДИИ ТЕСТИРОВАНИЯ!" design="Bold"/>
                <ToolbarSpacer/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
