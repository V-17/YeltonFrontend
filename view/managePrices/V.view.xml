<mvc:View controllerName="controller.managePrices.C" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
    <Page showHeader="false">
        <subHeader>
            <Toolbar>
                <ToolbarSpacer/>
                <Button
                    id="buttonResetFilter"
                    icon="sap-icon://decline"
                    press="onFilterResetButtonPress"
                    tooltip="Сбросить фильтр"
                    visible="false"/>
                <Button icon="sap-icon://filter" press="onFilterButtonPress" tooltip="Фильтр"/>
                <SearchField liveChange="onFilterLiveSearch" width="30%" showSearchButton="false"/>
            </Toolbar>
        </subHeader>
        <Table id="tablePrices" mode="SingleSelectMaster" items="{/}" fixedLayout="false">
            <columns>
                <Column/>
                <Column/>
                <Column/>
            </columns>
            <items>
                <ColumnListItem type="Active">
                    <cells>
                        <ObjectIdentifier title="{productName}" text="{categoryName}"/>
                        <ObjectIdentifier title="{price} {currencyShortName}" text="{amount} {unitShortName}"/>
                        <ObjectIdentifier
                            title="{storeName}"
                            text="{
                                path: 'date',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: {
                                    style: 'long',
                                    source: {
                                        pattern: 'dd.MM.yyyy'
                                    }
                                }
                            }"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        <footer>
            <Toolbar>
                <Button icon="sap-icon://add" press="onCreateButtonPress" tooltip="Создать"/>
                <Button icon="sap-icon://edit" press="onEditButtonPress" tooltip="Изменить"/>
                <Button icon="sap-icon://delete" press="onDeleteButtonPress" tooltip="Удалить"/>
                <ToolbarSpacer/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
