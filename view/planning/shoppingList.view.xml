<mvc:View
    controllerName="yelton.controller.planning.shoppingList"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page title="Список покупок" showNavButton="true" navButtonPress="onNavBackPress">
        <content>
            <NavContainer id="navCon" busyIndicatorDelay="500">
                <Page id="page1" title="Выберите товары, которые собираетесь покупать">
                    <content>
                        <List
                            id="listUnselectedProducts"
                            itemPress="onSelectProduct"
                            items="{
                                path : 'unselected>/',
                                sorter : [{
                                    path : 'categoryName',
                                    group : true
                                },{
                                    path: 'name'
                                }]
                            }">
                            <headerToolbar>
                                <Toolbar>
                                    <SearchField liveChange="onFilterLiveSearch" width="100%" showSearchButton="false"/>
                                </Toolbar>
                            </headerToolbar>
                            <items>
                                <StandardListItem title="{unselected>name}" type="Active"/>
                            </items>
                        </List>
                    </content>
                    <footer>
                        <Toolbar>
                            <Button
                                id="buttonBasket"
                                icon="sap-icon://basket"
                                enabled="false"
                                type="Emphasized"
                                tooltip="Выбранные товары"
                                press="onShowSelectedProductsPress"/>
                            <ToolbarSpacer/>
                            <Button id="buttonNext" text="Далее" press="onGetResultPress" type="Accept" enabled="false"/>
                        </Toolbar>
                    </footer>
                </Page>
                <Page id="page2" title="Товары, сгруппированные по магазинам">
                    <content>
                        <List
                            headerText="Список покупок"
                            items="{
                                path : 'shoppingList>/',
                                sorter : [{
                                    path : 'storeName',
                                    group : true
                                },{
                                    path: 'productName'
                                }]
                            }">
                            <items>
                                <ObjectListItem
                                    intro="{shoppingList>categoryName}"
                                    title="{shoppingList>productName}"
                                    number="{shoppingList>price}"
                                    numberUnit="{shoppingList>currency} / {shoppingList>unitShortName}">
                                    <!-- <firstStatus>
                                        <ObjectStatus text="Актуально на {shoppingList>date}"/>
                                    </firstStatus> -->
                                </ObjectListItem>
                            </items>
                        </List>
                    </content>
                    <footer>
                        <Toolbar>
                            <Button text="Назад" press="onBackPress"/>
                            <ToolbarSpacer/>
                        </Toolbar>
                    </footer>
                </Page>
            </NavContainer>
        </content>
    </Page>
</mvc:View>
