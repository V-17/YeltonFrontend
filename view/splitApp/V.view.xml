<mvc:View xmlns="sap.m" controllerName="yelton.controller.splitApp.C" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core">
    <SplitApp id="splitApp" mode="StretchCompressMode">
        <masterPages>
            <Page id="master" showHeader="false">
                <subHeader>
                    <Toolbar>
                        <Image src="favicon.ico"/>
                        <ToolbarSpacer/>
                        <Title text="Â¥elton"/>
                        <ToolbarSpacer/>
                        <Button id="buttonSettings" icon="sap-icon://action-settings" tooltip="{i18n>menu}" press="onSettingsButtonPress"/>
                    </Toolbar>
                </subHeader>
                <List
                    id="listMainMenu"
                    mode="SingleSelectMaster"
                    selectionChange="onNavTo"
                    items="{
                        path: 'mainMenu>/',
                        factory: '.mainMenuFactory'
                    }"/>
            </Page>
        </masterPages>
    </SplitApp>
</mvc:View>
