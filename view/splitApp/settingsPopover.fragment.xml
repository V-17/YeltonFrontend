<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Popover title="{Name}" placement="Right" showHeader="false">
        <List>
            <StandardListItem
                title="{i18n>settings}"
                description="{user>/userInfo/login}"
                type="Active"
                icon="sap-icon://account"
               press="settings.showSettings"/>
            <StandardListItem
                title="{i18n>exit}"
                type="Active"
                icon="sap-icon://log"
                press="settings.logout"/>
        </List>
    </Popover>
</core:FragmentDefinition>
