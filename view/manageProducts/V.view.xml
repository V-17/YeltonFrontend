<mvc:View controllerName="yelton.controller.manageProducts.C" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
    <Page>
        <headerContent>
            <ToolbarSpacer/>
            <SearchField liveChange="onFilterLiveSearch" width="30%" showSearchButton="false"/>
        </headerContent>
        <content>
            <List
                id="listProducts"
                growing="true"
                growingThreshold="50"
                growingScrollToLoad="true"
                mode="SingleSelectMaster"
                itemPress="productsEditDialog.showEditDialog"
                items="{
                    path : 'products>/',
                    sorter : [{
                        path : 'categoryName',
                        group : true
                    }, {
                        path: 'name'
                    }]
                }">
                <items>
                    <StandardListItem type="Active" title="{products>name}" info="{products>unitFullName}"/>
                </items>
            </List>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button icon="sap-icon://add" text="Создать" press="productsEditDialog.showCreateDialog" tooltip="Создать новый товар"/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
