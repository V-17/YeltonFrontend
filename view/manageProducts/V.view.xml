<mvc:View controllerName="controller.manageProducts.C" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
    <Page>
        <headerContent>
            <Toolbar>
                <ToolbarSpacer/>
                <SearchField liveChange="onFilterLiveSearch" width="30%" showSearchButton="false"/>
            </Toolbar>
        </headerContent>
        <subHeader>
            <Toolbar>
                <Button icon="sap-icon://add" press="onCreateButtonPress" tooltip="Создать"/>
                <Button icon="sap-icon://edit" press="onEditButtonPress" tooltip="Изменить"/>
                <Button icon="sap-icon://delete" press="onDeleteButtonPress" tooltip="Удалить"/>
                <ToolbarSpacer/>
            </Toolbar>
        </subHeader>
        <List
            growing="true"
            growingThreshold="50"
            growingScrollToLoad="true"
            id="listProducts"
            mode="SingleSelectMaster"
            items="{
                path : '/',
                sorter : {
                    path : 'categoryName',
                    group : true
                }
            }">
            <items>
                <StandardListItem type="Active" title="{name}" info="{unitFullName}"/>
            </items>
        </List>
    </Page>
</mvc:View>
