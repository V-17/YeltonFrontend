<mvc:View controllerName="controller.manageProducts.C" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
    <Page>
        <headerContent>
            <ToolbarSpacer/>
            <SearchField liveChange="onFilterLiveSearch" width="30%" showSearchButton="false"/>
        </headerContent>
        <content>
            <List
                id="listProducts"
                growing="true"
                growingThreshold="50"
                growingScrollToLoad="true"
                mode="SingleSelectMaster"
                itemPress="onSelect"
                items="{
                path : '/',
                sorter : {
                    path : 'categoryName',
                    group : true
                }
            }">
                <items>
                    <StandardListItem type="Active" title="{name}" info="{unitFullName}"/>
                </items>
            </List>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button icon="sap-icon://add" text="Создать" press="onCreateButtonPress" tooltip="Создать новый товар"/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
